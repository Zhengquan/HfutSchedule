<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/absolute2"
android:background="#FCFCFC"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:padding="10dp"
xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
android:id="@+id/relative2"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/schedule_back" 
xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
android:id="@+id/relative4"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerInParent="true"
android:paddingTop="3dp"
xmlns:android="http://schemas.android.com/apk/res/android">
<TextView
android:id="@+id/textview3"
android:text="Date"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:padding="10dp"
android:gravity="center"
android:background="@drawable/button_schedule">
</TextView>
<LinearLayout 
android:id="@+id/linearlayout1"
android:orientation="vertical"
android:layout_below="@id/textview3"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/transparent_schedule"
xmlns:android="http://schemas.android.com/apk/res/android">
<TextView
android:id="@+id/schedule1"
android:text="A"
android:textColor="#563624"
android:layout_width="fill_parent"
android:layout_height="50dp"
android:gravity="center"
android:layout_marginTop="5dp"
/>
<TextView
android:text="B"
android:textColor="#563624"
android:id="@+id/schedule2"
android:layout_width="fill_parent"
android:layout_height="50dp"
android:gravity="center"
/>
<TextView
android:text="C"
android:textColor="#2e3a1f"
android:id="@+id/schedule3"
android:layout_width="fill_parent"
android:layout_height="20dp"
android:gravity="center"
/>
<TextView
android:text="D"
android:textColor="#563624"
android:id="@+id/schedule4"
android:layout_width="fill_parent"
android:layout_height="50dp"
android:gravity="center"
/>
<TextView
android:text="E"
android:textColor="#563624"
android:id="@+id/schedule5"
android:layout_width="fill_parent"
android:layout_height="50dp"
android:gravity="center"
/>
<TextView
android:text="备注"
android:textColor="#281f1d"
android:id="@+id/schedule6"
android:layout_width="fill_parent"
android:layout_height="50dp"
android:gravity="center"
/>
</LinearLayout>
<RelativeLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
android:layout_below="@id/linearlayout1"
xmlns:android="http://schemas.android.com/apk/res/android">
<Button 
android:id="@+id/button_former"
android:text="←"
android:gravity="center"
android:textSize="18sp"
android:textColor="#102b6a"
android:layout_width="50dp"
android:layout_height="30dp"
android:layout_below="@id/linearlayout1"
android:background="@drawable/button_back"
/>
<Button 
android:id="@+id/button_Next"
android:textSize="18sp"
android:text="→"
android:textColor="#102b6a"
android:gravity="center"
android:layout_width="50dp"
android:layout_height="30dp"
android:layout_marginLeft="40dp"
android:layout_alignBaseline="@id/button_former"
android:layout_toRightOf="@id/button_former"
android:background="@drawable/button_back"
/>
</RelativeLayout>
</RelativeLayout>
</RelativeLayout>
</RelativeLayout>